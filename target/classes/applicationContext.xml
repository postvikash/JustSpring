<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="captainAmerica" class="thor.stormbreaker.avengers.Impl.CaptainAmerica">
        <property name="name" value="Steve Rogers" />
        <property name="power" value="Epitome of human potential" />
    </bean>

    <context:component-scan base-package="thor.stormbreaker.config" />

</beans>